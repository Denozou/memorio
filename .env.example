# Database Configuration (for your existing PostgreSQL Docker container)
# Example: postgresql://postgres:5432/memorio
DB_URL=jdbc:postgresql://host.docker.internal:5432/memorio
DB_USERNAME=postgres
DB_PASSWORD=postgres

# JWT Configuration
# Generate a secure secret key (at least 32 bytes)
# You can generate one using: openssl rand -base64 64
JWT_SECRET=change-me-super-secret-at-least-32-bytes-long-123456
JWT_ISSUER=memorio
JWT_ACCESS_TOKEN_MINUTES=60
JWT_REFRESH_TOKEN_MINUTES=10080

# Cookie Security
# Set to true in production to enable HTTPS-only cookies (required for security)
COOKIE_SECURE=false

# Encryption Configuration
# CRITICAL: Generate a secure 256-bit (32-byte) key for encrypting sensitive data at rest
# Generate using: openssl rand -base64 32
# This must be kept secret and backed up securely
# For development, a default key is provided in application.properties
# For production, you MUST set this to a securely generated key:
# ENCRYPTION_KEY=your-secure-production-key-here

# OAuth2 Google Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# OAuth2 Facebook Configuration
# Get credentials from: https://developers.facebook.com/apps/
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

EMAIL_ENABLED=true
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

REDIS_HOST=redis
REDIS_PORT=6379